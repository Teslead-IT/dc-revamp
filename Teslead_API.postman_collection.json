{
  "info": {
    "name": "Teslead API",
    "description": "API collection for Teslead Next.js Dashboard with JWT Authentication and RBAC",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Setup - Create First Super Admin",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"admin\",\n  \"email\": \"admin@teslead.com\",\n  \"password\": \"admin123\",\n  \"name\": \"Administrator\"\n}"
            },
            "url": {
              "raw": "http://localhost:3012/api/auth/setup",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3012",
              "path": ["api", "auth", "setup"]
            },
            "description": "Create the first super-admin user (only works if no users exist)"
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"admin\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "http://localhost:3012/api/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3012",
              "path": ["api", "auth", "login"]
            },
            "description": "Login with any user credentials"
          }
        },
        {
          "name": "Create User (Admin Only)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"newuser\",\n  \"email\": \"newuser@teslead.com\",\n  \"password\": \"password123\",\n  \"name\": \"New User\",\n  \"role\": \"user\"\n}"
            },
            "url": {
              "raw": "http://localhost:3012/api/auth/create-user",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3012",
              "path": ["api", "auth", "create-user"]
            },
            "description": "Create a new user. Requires admin or super_admin role. Admin can only create 'user' role, super_admin can create any role."
          }
        },
              "protocol": "http",
              "host": ["localhost"],
              "port": "3012",
              "path": ["api", "auth", "login"]
            },
            "description": "Login as Super Admin user"
          }
        },
        {
          "name": "Login - Regular User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"user\",\n  \"password\": \"user123\"\n}"
            },
            "url": {
              "raw": "http://localhost:3012/api/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3012",
              "path": ["api", "auth", "login"]
            },
            "description": "Login as Regular user"
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "url": {
              "raw": "http://localhost:3012/api/auth/refresh",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3012",
              "path": ["api", "auth", "refresh"]
            },
            "description": "Refresh access token using refresh token. Use {{refreshToken}} variable after login."
          }
        }
      ]
    },
    {
      "name": "Protected Endpoints",
      "item": [
        {
          "name": "Protected - Any Auth User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3012/api/v1/protected",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3012",
              "path": ["api", "v1", "protected"]
            },
            "description": "Requires any valid access token. Use {{accessToken}} variable."
          }
        },
        {
          "name": "Admin Only Endpoint",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3012/api/v1/admin-only",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3012",
              "path": ["api", "v1", "admin-only"]
            },
            "description": "Requires admin or super_admin role. Use {{accessToken}} from admin/super_admin login."
          }
        },
        {
          "name": "Super Admin Only Endpoint",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3012/api/v1/super-admin-only",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3012",
              "path": ["api", "v1", "super-admin-only"]
            },
            "description": "Requires super_admin role only. Use {{accessToken}} from super_admin login."
          }
        }
      ]
    },
    {
      "name": "Delivery Challans",
      "item": [
        {
          "name": "Get All Delivery Challans",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3012/api/v1/delivery-challans?page=1&limit=10",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3012",
              "path": ["api", "v1", "delivery-challans"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            },
            "description": "Get all delivery challans with pagination"
          }
        },
        {
          "name": "Get DC by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3012/api/v1/delivery-challans/{{dcId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3012",
              "path": ["api", "v1", "delivery-challans", "{{dcId}}"]
            },
            "description": "Get single delivery challan by ID. Replace {{dcId}} with actual UUID."
          }
        },
        {
          "name": "Create Delivery Challan",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"dcNumber\": \"DC-2025-001\",\n  \"customerName\": \"John Doe\",\n  \"itemNames\": [\"Item1\", \"Item2\"],\n  \"totalDispatchQty\": 100,\n  \"totalReceivedQty\": 0,\n  \"status\": \"draft\"\n}"
            },
            "url": {
              "raw": "http://localhost:3012/api/v1/delivery-challans/create",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3012",
              "path": ["api", "v1", "delivery-challans", "create"]
            },
            "description": "Create a new delivery challan"
          }
        },
        {
          "name": "Update Delivery Challan",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customerName\": \"Jane Doe\",\n  \"totalReceivedQty\": 50,\n  \"status\": \"partial\"\n}"
            },
            "url": {
              "raw": "http://localhost:3012/api/v1/delivery-challans/{{dcId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3012",
              "path": ["api", "v1", "delivery-challans", "{{dcId}}"]
            },
            "description": "Update an existing delivery challan"
          }
        },
        {
          "name": "Delete Delivery Challan",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3012/api/v1/delivery-challans/{{dcId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3012",
              "path": ["api", "v1", "delivery-challans", "{{dcId}}"]
            },
            "description": "Delete a delivery challan (soft delete)"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "refreshToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "dcId",
      "value": "",
      "type": "string"
    }
  ]
}
